<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CDC2C2"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_respuesta"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:background="#E8DCDC"
        android:hint="@string/_0"
        android:textColorHint="#757575"
        android:textSize="34sp"
        android:textStyle="bold" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="261dp"
        android:background="#CFC8C8">

        <TableRow
            android:layout_width="374dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/num1"
                android:layout_width="235dp"
                android:layout_height="64dp"
                android:autofillHints=""
                android:background="#938E8E"
                android:ems="10"
                android:hint="N1"
                android:inputType="number"
                android:textSize="24sp"
                tools:ignore="TextContrastCheck" />

            <EditText
                android:id="@+id/porcentaje1"
                android:layout_width="196dp"
                android:layout_height="64dp"
                android:autofillHints=""
                android:background="#9A9696"
                android:ems="10"
                android:hint="@string/n1"
                android:inputType="number"
                android:textColorHint="#424242"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/num2"
                android:layout_width="235dp"
                android:layout_height="64dp"
                android:autofillHints=""
                android:background="#706E6E"
                android:ems="10"
                android:hint="@string/n2"
                android:inputType="number"
                android:textColorHint="#212121"
                android:textSize="24sp"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/textView_x"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="#A89B9B"
                android:text="@string/x"
                android:textSize="24sp"
                android:textStyle="bold" />
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/button_calcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FF9800"
        android:text="@string/calcular"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/siguiente_boton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="siguiente" />

</LinearLayout>